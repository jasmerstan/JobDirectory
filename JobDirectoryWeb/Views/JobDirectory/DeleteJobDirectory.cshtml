@model JobDirectoryWeb.Models.DTO.JobDirectoryDTO

<form asp-action="DeleteJobDirectory">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Job Directory</h1>
        <hr />
        <input hidden asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="UserName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UserName"disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PhoneNumber" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="SkillSets" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="SkillSets" disabled class="form-control"></textarea>
            </div>
            <div class="col-2">
                <label asp-for="Hobby" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Hobby" disabled class="form-control"></textarea>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="JobDirectory" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
